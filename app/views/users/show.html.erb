<h1>マイページ</h1>
<p>名前 : <%= @user.name %></p>
<p>メールアドレス : <%= @user.email %></p>
<p>プロフィール : <%= @user.profile %></p>

<% if current_user.id == @user.id %>
  <%= link_to "編集する", edit_user_registration_path %>
<% end %>

<h2>ユーザーの投稿一覧</h2>
<% @user.saunas.each do |t| %>
  <%= t.user.name %>
  <%= t.name %>
<% end %>

<!-- 以下はいいね機能を実装している場合-->
<h2>ユーザーがいいねした投稿一覧</h2>
<% @user.liked_saunas.each do |t| %>
  <%= t.user.name %>
  <%= t.name %>
<% end %>

<h1><%= @user.name %>'s Profile</h1>

<h2>サウナ日記</h2>
<ul>
  <% if @diary_entries.present? %>
    <% @diary_entries.each do |entry| %>
      <li>
        <strong><%= entry.title %></strong><br>
        <%= entry.content %>
      </li>
    <% end %>
  <% else %>
    <li>No diary entries available.</li>
  <% end %>
</ul>
<%= link_to '戻る', saunas_path %>